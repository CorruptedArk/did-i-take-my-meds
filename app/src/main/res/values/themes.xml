<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DidITakeMyMeds" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/notification_bar</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="clockNumberTextColor">@color/purple_200</item>
        <item name="dialogTheme">@style/Theme.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.Dialog</item>
        <item name="materialAlertDialogTheme">@style/Theme.Dialog</item>
        <item name="materialTimePickerTheme">@style/Theme.TimePicker</item>
        <item name="materialCalendarTheme">@style/Theme.Calendar</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>
    <style name="Theme.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>
    <style name="Theme.Calendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>
    <style name="Theme.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/purple_200</item>
    </style>

</resources>